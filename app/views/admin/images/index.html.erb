<h1>Images</h1>
<div class="py-6">
  <%= link_to 'Add image', new_admin_image_path, :class => "btn btn-blue" %>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Thumbnail</th>
      <th>URL</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @images.each do |image| %>
      <tr>
        <td><%= image_tag image.picture.variant(resize_to_limit: [100, nil]) %></td>
        <td><%= link_to url_for(image.picture), url_for(image.picture) %></td>
        <td class="form-actions">
          <%= button_to 'Delete', admin_image_path(image), :confirm => 'Are you sure?', :method => :delete, :class => "btn btn-mini btn-danger btn-form ml-1" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
