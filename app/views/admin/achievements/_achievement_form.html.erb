<h1>Achievement Details</h1>
<%= error_messages_for :achievement %>
<div id="success">
  <% if flash[:notice] %>
    <%= render :partial => 'shared/success', :locals => {:msg => flash[:notice]} %>
  <% end %>
</div>
<fieldset>
  <ol>
    <li>
      <label for="rank">Rank:</label>
      <%= f.text_field :rank %>
    </li>
    <li>
      <label for="heading">Heading:</label>
      <%= f.text_field :heading %>
    </li>
    <li>
      <label for="description">Description:</label>
      <%= f.text_area :description %>
    </li>
    <li class="submitBtn">
      <button value="submit" class="submitBtn">
        <span>Save Achievement</span>
      </button>
    </li>
  </ol>
</fieldset>