<div id="secondaryText" class="blog">
  <h2 class="top">Navigation</h2>
  <ul>
    <li class="sans"><%= link_to "Blog home", "/blog" %></li>
    <li class="sans"><%= link_to "Archives", "/blog/archives" %></li>
  </ul>
  <h2>Latest Blog Posts</h2>
  <%= render "shared/latest_posts" %>
  <h2>Syndication</h2>
  <%= render "shared/syndication" %>
  <h2>Tags</h2>
  <p class="sans">
    <% cache "tag_cloud" do %>
      <% tag_cloud @tags, %w(css1 css2 css3 css4) do |tag, css_class| %>
        <%= link_to tag.name, blog_tag_path(tag.name.gsub(' ', '-')), :class => css_class %>
      <% end %>
    <% end %>
  </p>
</div>
