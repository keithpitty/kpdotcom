<div id="postcomment">
  <h4>Post a Comment</h4>
  <p>Please use your real name and be respectful. <a href="http://redcloth.org/hobix.com/textile/">Textile</a> formatting is supported.</p>

<%= render "shared/alerts" %>

  <%= simple_form_for @comment, :url => create_comment_blog_archive_path do |f| %>
    <fieldset>
      <%= hidden_field_tag 'blog_id', @blog_post.id %>

      <%= f.input :name %>
      <%= f.input :email %>
      <%= f.input :website %>
      <%= f.input :comment, :input_html => { :rows => "10" } %>

      <button class="btn btn-blue btn-form">
        Post Comment
      </button>
    </fieldset>
  <% end %>

</div>
